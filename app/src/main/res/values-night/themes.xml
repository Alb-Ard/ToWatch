<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToWatch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryVariant">@color/blue_light_alt</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_light_alt</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ToWatch.ActionBar" parent="Theme.ToWatch">
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.ToWatch.ActionBar.Popup" parent="Theme.ToWatch">
        <item name="android:itemBackground">?attr/backgroundColor</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.ToWatch.TextView.AsActionBar" parent="Theme.ToWatch">
        <item name="background">?attr/colorPrimary</item>
        <item name="android:foreground">?attr/colorOnPrimary</item>
    </style>
</resources>