<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <EditText
        android:id="@+id/editMovie_movieName_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_top"
        android:layout_marginHorizontal="@dimen/spacing_horizontal"
        android:inputType="text"
        android:imeOptions="flagNoExtractUi"
        android:autofillHints=""
        android:text="@string/no_movie_name"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/editMovie_searchInfo_imageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search_24"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="@dimen/spacing_horizontal"
        android:text="@string/search"
        tools:icon="@drawable/ic_search_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editMovie_movieName_editText" />

</androidx.constraintlayout.widget.ConstraintLayout>