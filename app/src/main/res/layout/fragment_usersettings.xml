<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userSettingsFragment_userName_textLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="@string/username_label"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userSettingsFragment_userName_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:imeOptions="flagNoExtractUi"
            android:autofillHints="" />

    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/userSettingsFragment_filterAdult_checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/filter_adult_content"
        android:checked="true" />

</androidx.appcompat.widget.LinearLayoutCompat>